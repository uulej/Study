import java.util.Arrays;

class CycleSwap {
   public static void main(String[] args) {
        int[] array = new int[]{1, 3, 2, 7, 4};
        cycleSwap(array);
        cycleSwap(array, 3);
    }

    static void cycleSwap(int[] array) {
        int[] arraySwap = new int[array.length];
        arraySwap[0] = array.length - 1;
        for (int i = 1; i < array.length; i++) {
            arraySwap[i] = array[i - 1];
        }
        System.out.println(Arrays.toString(arraySwap));
        
    }

    static void cycleSwap(int[] array, int shift) {
        int rightIndexMove = array.length - shift;
        if (rightIndexMove == 0 || rightIndexMove == array.length) {
            System.out.println(Arrays.toString(array));
        }
        int[] tmpArr = new int[array.length];
        int tmpIndex = 0;
        while (tmpIndex < array.length) {
            if (rightIndexMove > array.length - 1)
                rightIndexMove = 0;
            tmpArr[tmpIndex++] = array[rightIndexMove++];
        }
        System.out.println(Arrays.toString(tmpArr));
    }
}


